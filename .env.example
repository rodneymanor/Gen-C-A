# Local development environment example
# Copy to `.env.local` and replace placeholder values.
# Note: Vite exposes only variables prefixed with `VITE_` to the client.

# --- AI Service API Keys ---
VITE_GEMINI_API_KEY=your_gemini_api_key
VITE_OPENAI_API_KEY=your_openai_api_key
VITE_ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_server_side_openai_key
ANTHROPIC_API_KEY=your_server_side_anthropic_key
GEMINI_API_KEY=your_server_side_gemini_key
LLM_PROVIDER=auto # openai|anthropic|gemini|auto
USE_MOCK_AI=false # set true to bypass LLM and use mock

# --- Internal/3rd-party Services ---
INTERNAL_API_SECRET=change_me_strong_secret
RAPIDAPI_KEY=your_rapidapi_key
ASSEMBLYAI_API_KEY=your_assemblyai_key

# --- Firebase (client SDK) ---
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_web_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=000000000000
NEXT_PUBLIC_FIREBASE_APP_ID=1:XXXXXXXXXXXX:web:YYYYYYYYYYYYYYYY
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# --- Google/Gemini/Search ---
GEMINI_API_KEY=your_server_side_gemini_key
CUSTOM_SEARCH_API_KEY=your_google_custom_search_api_key
SEARCH_ENGINE_ID=your_cse_id

# --- Email / DNS ---
IMPROVMX_API_KEY=your_improvmx_key
IMPROVMX_DOMAIN=yourdomain.tld

# --- Bunny.net Stream ---
BUNNY_STREAM_LIBRARY_ID=000000
BUNNY_STREAM_API_KEY=your_bunny_stream_api_key
BUNNY_CDN_HOSTNAME=vz-xxxxxxxx-xxx.b-cdn.net

# --- Video processing ---
VIDEO_API_KEY=your_video_api_key

# --- Firebase Admin (server SDK) ---
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@your-project.iam.gserviceaccount.com
FIREBASE_PROJECT_ID=your_project_id

# Choose ONE of the following for Admin credentials:
# 1) Recommended: path to JSON credentials file (outside repo preferred)
GOOGLE_APPLICATION_CREDENTIALS=/Users/youruser/.config/gen-c-alpha/secrets/your-firebase-adminsdk.json
# 2) Optional: inline private key (some setups)
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# --- Feature Flags ---
FEATURE_V2_SCRIPT_GENERATION_ENABLED=true
FEATURE_V2_SCRIPT_GENERATION_ROLLOUT_PERCENTAGE=100
FEATURE_V2_ENHANCED_PROMPTS_ENABLED=true
FEATURE_V2_TEMPLATE_HOOKS_ENABLED=true
FEATURE_V2_SMART_BRIDGES_ENABLED=true
FEATURE_V2_PERFORMANCE_MONITORING_ENABLED=true
FEATURE_VOICE_LIBRARY_ENABLED=false
FEATURE_CREATOR_SPOTLIGHT_ENABLED=false

# --- Crawling / Automation ---
APIFY_TOKEN=your_apify_token
BROWSE_AI_ROBOT_ID=your_browse_ai_robot_id
BROWSE_AI_API_KEY=your_browse_ai_api_key
BROWSE_AI_TEAM_ID=your_browse_ai_team_id

# --- Browserless ---
BROWSERLESS_API_KEY=your_browserless_key
BROWSERLESS_URL=https://chrome.browserless.io?token=your_token

# --- Analytics ---
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_public_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# --- Scheduled tasks ---
CRON_SECRET=change_me_cron_secret

# Optional: legacy path if you keep the JSON within the repo (not recommended)
# FIREBASE_SERVICE_ACCOUNT_PATH=./service-account.json
